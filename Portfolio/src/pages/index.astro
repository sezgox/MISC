<style>
    body::-webkit-scrollbar, popover::-webkit-scrollbar {
        width: 8px;
        scrollbar-color: green;
    }
    body::-webkit-scrollbar-track, popover::-webkit-scrollbar-track {
        box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.3);
    }
    body::-webkit-scrollbar-thumb, popover::-webkit-scrollbar-thumb {
        background-color: darkgrey;
        border-radius: 8px;
    }
    body::-webkit-scrollbar-track-piece, popover::-webkit-scrollbar-thumb{
        background-color: rgb(40, 40, 40);
    }
    popover{
        scrollbar-color: #888 #f1f1f1; /* thumb, track */
        scrollbar-width: thin; /* "auto", "thin" o "none" */
    }
</style>
